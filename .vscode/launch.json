{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Geral)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // O comando abaixo tenta rodar a DLL que tem o mesmo nome da pasta do projeto
            "program": "${workspaceFolder}/bin/Debug/net10.0/${workspaceFolderBasename}.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}